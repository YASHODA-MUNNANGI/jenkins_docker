pipeline {
  agent any

  stages {
    stage('Clone repo') {
      steps {
        // Checkout source code from version control
        git url: 'https://github.com/YASHODA-MUNNANGI/jenkins_docker.git',
            credentialsId: 'guthub',
            branch: 'main'
      }
    }

    stage('Docker Build') {
      steps {
        script {
          docker.image('hello-world-java1').build('-f Dockerfile .')
        }
      }
    }

    stage('Deploy') {
      steps {
        script {
          docker.image('hello-world-java1').run('-p 8080:8080')
        }
      }
    }
  }
}
