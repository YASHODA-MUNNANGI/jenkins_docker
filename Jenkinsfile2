pipeline {
  agent any

  stages {
    stage('Clone repo') {
      steps {
        // Checkout source code from version control
        git url: 'https://github.com/YASHODA-MUNNANGI/jenkins_docker.git',
            credentialsId: 'guthub',
            branch: 'main'
      }
    }

    stage('Docker Build') {
      steps {
        // Build the Docker image
        script {
          sh 'docker build -t hello-world-java1 -f Dockerfile .'
        }
      }
    }

    stage('Deploy') {
      steps {
        // Deploy the Docker container
        script {
          sh 'docker run -d -p 8080:8080 hello-world-java1'
        }
      }
    }
  }
}
